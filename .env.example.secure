# Zekka Framework Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED VARIABLES (NO DEFAULTS)
# ============================================

# JWT Secret - REQUIRED (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=

# Database Connection - REQUIRED
DATABASE_URL=postgresql://username:password@localhost:5432/zekka

# Encryption Key - REQUIRED (64 hex characters = 32 bytes)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# Session Secret - REQUIRED (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=

# ============================================
# ENVIRONMENT
# ============================================

NODE_ENV=development
PORT=3000

# ============================================
# DATABASE
# ============================================

# PostgreSQL Password (if not in DATABASE_URL)
POSTGRES_PASSWORD=

# Connection Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20

# ============================================
# REDIS
# ============================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# AUTHENTICATION & SECURITY
# ============================================

# JWT
JWT_EXPIRATION=24h

# Password Requirements
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Session
SESSION_TIMEOUT=3600000

# MFA
MFA_ENABLED=true

# ============================================
# RATE LIMITING
# ============================================

# General API Rate Limit
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Authentication Rate Limit
AUTH_RATE_LIMIT_MAX=5

# Project Creation Rate Limit
PROJECT_RATE_LIMIT_MAX=10

# ============================================
# REQUEST LIMITS
# ============================================

MAX_JSON_SIZE=1mb
MAX_URL_ENCODED_SIZE=1mb

# ============================================
# CORS
# ============================================

# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Trust Proxy (set to true if behind reverse proxy)
TRUST_PROXY=false

# ============================================
# LOGGING
# ============================================

LOG_LEVEL=info

# ============================================
# EXTERNAL APIs (Optional)
# ============================================

# GitHub
GITHUB_TOKEN=

# AI APIs
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Ollama
OLLAMA_HOST=http://localhost:11434
DEFAULT_MODEL=ollama
MAX_CONCURRENT_AGENTS=10

# ============================================
# BUDGET
# ============================================

DAILY_BUDGET=50
MONTHLY_BUDGET=1000

# ============================================
# SECURITY SERVICES (Optional)
# ============================================

# TwinGate Zero Trust
TWINGATE_API_URL=
TWINGATE_API_KEY=
TWINGATE_NETWORK_ID=

# Wazuh SIEM
WAZUH_API_URL=
WAZUH_USERNAME=
WAZUH_PASSWORD=

# ============================================
# MONITORING (Optional)
# ============================================

# Sentry Error Tracking
SENTRY_DSN=

# ============================================
# MULTI-CHANNEL AUTH (Optional)
# ============================================

# Twilio (SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_WHATSAPP_NUMBER=

# Telegram
TELEGRAM_BOT_TOKEN=

# SendGrid (Email)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# ============================================
# NOTES
# ============================================

# SECURITY WARNINGS:
# 1. NEVER commit this file with real values
# 2. NEVER use default values in production
# 3. Generate strong random secrets for all keys
# 4. Rotate secrets regularly
# 5. Use environment-specific values (dev/staging/prod)

# GENERATE SECURE SECRETS:
# JWT_SECRET:        node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# ENCRYPTION_KEY:    node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# SESSION_SECRET:    node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# For production deployment:
# 1. Set all REQUIRED variables
# 2. Use strong database passwords
# 3. Enable SSL for Redis if using remote instance
# 4. Configure proper CORS origins
# 5. Enable TRUST_PROXY if behind load balancer
# 6. Set NODE_ENV=production
# 7. Configure monitoring services (Sentry, etc.)
