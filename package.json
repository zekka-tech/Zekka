{
  "name": "zekka-framework",
  "version": "3.0.0",
  "description": "Enterprise-grade AI orchestration platform with 95+ integrated tools",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest --coverage --verbose",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand",
    "test:e2e": "jest --testPathPattern=tests/e2e --runInBand",
    "test:watch": "jest --watch",
    "test:security": "./test-security.sh",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "format": "prettier --write \"src/**/*.{js,ts,json}\"",
    "migrate": "node src/cli/migrate.js",
    "migrate:status": "node src/cli/migrate.js status",
    "migrate:create": "node src/cli/migrate.js create",
    "migrate:rollback": "node src/cli/migrate.js rollback",
    "migrate:verify": "node src/cli/migrate.js verify",
    "load-test": "k6 run load-tests/k6-load-test.js",
    "load-test:artillery": "artillery run load-tests/artillery-config.yml",
    "metrics": "node src/cli/metrics.js",
    "backup": "node src/cli/backup.js"
  },
  "keywords": [
    "ai",
    "orchestration",
    "framework",
    "enterprise",
    "typescript",
    "microservices"
  ],
  "author": "Zekka Technologies",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "bull": "^4.12.0",
    "axios": "^1.6.2",
    "geoip-lite": "^1.4.7",
    "uuid": "^9.0.1",
    "luxon": "^3.4.4",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "prom-client": "^15.1.0",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/jest": "^29.5.10",
    "@types/supertest": "^6.0.1",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@faker-js/faker": "^8.3.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.d.ts",
      "!src/cli/**",
      "!src/types/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@services/(.*)$": "<rootDir>/src/services/$1",
      "^@middleware/(.*)$": "<rootDir>/src/middleware/$1",
      "^@routes/(.*)$": "<rootDir>/src/routes/$1",
      "^@types/(.*)$": "<rootDir>/src/types/$1",
      "^@utils/(.*)$": "<rootDir>/src/utils/$1",
      "^@config/(.*)$": "<rootDir>/src/config/$1"
    },
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testTimeout": 30000
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
