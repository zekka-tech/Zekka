# Zekka Framework Production Environment Variables
# RENAME TO .env.production BEFORE DEPLOYMENT

# Application
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=zekka_production
DB_USER=zekka_admin
# GENERATE SECURE PASSWORD: openssl rand -base64 32
DB_PASSWORD=

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
# GENERATE SECURE PASSWORD: openssl rand -base64 32
REDIS_PASSWORD=

# Security Secrets (MUST BE STRONG)
# GENERATE: openssl rand -hex 64
JWT_SECRET=
SESSION_SECRET=
ENCRYPTION_KEY=

# External APIs (Optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GITHUB_TOKEN=

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_RATE_LIMITING=true
