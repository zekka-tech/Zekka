{
  "dashboard": {
    "title": "Zekka Framework - Production Dashboard",
    "tags": ["zekka", "production", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Rate",
        "type": "graph",
        "datasource": "Prometheus",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}} - {{status_code}}"
          }
        ],
        "options": {
          "legend": { "show": true, "position": "bottom" },
          "tooltip": { "mode": "multi" }
        }
      },
      {
        "id": 2,
        "title": "HTTP Request Duration (P95)",
        "type": "graph",
        "datasource": "Prometheus",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 - {{method}} {{route}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "datasource": "Prometheus",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "rate(http_requests_total{status_code=~\"5..\"}[5m])",
            "legendFormat": "5xx Errors"
          },
          {
            "expr": "rate(http_requests_total{status_code=~\"4..\"}[5m])",
            "legendFormat": "4xx Errors"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": { "type": "gt", "params": [10] },
              "operator": { "type": "and" },
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "type": "avg" },
              "type": "query"
            }
          ]
        }
      },
      {
        "id": 4,
        "title": "Cache Hit Rate",
        "type": "gauge",
        "datasource": "Prometheus",
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "rate(cache_hits_total[5m]) / (rate(cache_hits_total[5m]) + rate(cache_misses_total[5m])) * 100"
          }
        ],
        "options": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": 0, "color": "red" },
              { "value": 70, "color": "yellow" },
              { "value": 90, "color": "green" }
            ]
          }
        }
      },
      {
        "id": 5,
        "title": "Database Query Duration (P95)",
        "type": "graph",
        "datasource": "Prometheus",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 - {{operation}} {{table}}"
          }
        ]
      },
      {
        "id": 6,
        "title": "Database Connection Pool",
        "type": "graph",
        "datasource": "Prometheus",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "targets": [
          {
            "expr": "db_connection_pool_size{state=\"active\"}",
            "legendFormat": "Active"
          },
          {
            "expr": "db_connection_pool_size{state=\"idle\"}",
            "legendFormat": "Idle"
          },
          {
            "expr": "db_connection_pool_size{state=\"waiting\"}",
            "legendFormat": "Waiting"
          }
        ]
      },
      {
        "id": 7,
        "title": "Authentication Attempts",
        "type": "graph",
        "datasource": "Prometheus",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
        "targets": [
          {
            "expr": "rate(auth_attempts_total{result=\"success\"}[5m])",
            "legendFormat": "Successful"
          },
          {
            "expr": "rate(auth_attempts_total{result=\"failure\"}[5m])",
            "legendFormat": "Failed"
          }
        ]
      },
      {
        "id": 8,
        "title": "Security Events",
        "type": "graph",
        "datasource": "Prometheus",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
        "targets": [
          {
            "expr": "rate(security_events_total[5m])",
            "legendFormat": "{{severity}} - {{type}}"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": { "type": "gt", "params": [5] },
              "operator": { "type": "and" },
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "type": "avg" },
              "type": "query"
            }
          ]
        }
      },
      {
        "id": 9,
        "title": "Active Users",
        "type": "stat",
        "datasource": "Prometheus",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 32 },
        "targets": [
          {
            "expr": "active_users_total"
          }
        ]
      },
      {
        "id": 10,
        "title": "Active Sessions",
        "type": "stat",
        "datasource": "Prometheus",
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 32 },
        "targets": [
          {
            "expr": "active_sessions_total"
          }
        ]
      },
      {
        "id": 11,
        "title": "Memory Usage",
        "type": "graph",
        "datasource": "Prometheus",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 36 },
        "targets": [
          {
            "expr": "process_resident_memory_bytes",
            "legendFormat": "Resident Memory"
          },
          {
            "expr": "process_heap_bytes",
            "legendFormat": "Heap Memory"
          }
        ]
      },
      {
        "id": 12,
        "title": "CPU Usage",
        "type": "graph",
        "datasource": "Prometheus",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 36 },
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[5m]) * 100",
            "legendFormat": "CPU Usage %"
          }
        ]
      },
      {
        "id": 13,
        "title": "External API Call Duration",
        "type": "graph",
        "datasource": "Prometheus",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 44 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(api_call_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 - {{service}}"
          }
        ]
      },
      {
        "id": 14,
        "title": "Circuit Breaker States",
        "type": "table",
        "datasource": "Prometheus",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 44 },
        "targets": [
          {
            "expr": "circuit_breaker_state",
            "legendFormat": "{{service}}"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "Value": "State (0=Closed, 1=Open, 2=Half-Open)"
              }
            }
          }
        ]
      },
      {
        "id": 15,
        "title": "Rate Limit Exceeded",
        "type": "graph",
        "datasource": "Prometheus",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 52 },
        "targets": [
          {
            "expr": "rate(rate_limit_exceeded_total[5m])",
            "legendFormat": "{{endpoint}}"
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(environment)",
          "current": {
            "text": "production",
            "value": "production"
          }
        },
        {
          "name": "instance",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(instance)",
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "includeAll": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\"}",
          "iconColor": "red",
          "name": "Alerts",
          "tagKeys": "alertname,severity"
        }
      ]
    }
  }
}
